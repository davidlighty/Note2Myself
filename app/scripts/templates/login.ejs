<div class="bbm-modal__topbar">
    <h3 class="bbm-modal__title">Welcome to NoteApp</h3>
</div>
<div class="bbm-modal__section">
    <div class="alert alert-error" style="display:none;">
    </div>
    <ul>
        <li>
            <div>
                <!-- login form -->
                <form class="form-horizontal" id="login-form">
                    <div class="control-group">
                        <label class="control-label" for="inputEmail">Email</label>
                        <div class="controls">
                            <input type="email" id="inputEmail" placeholder="Email" class="form-control" required>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputPassword">Password</label>
                        <div class="controls">
                            <input type="text" id="inputPassword" placeholder="Password" class="form-control" required>
                        </div>
                    </div>
                </form>
            </div>
        </li>
    </ul>
</div>
<div class="bbm-modal__bottombar">
    <button  id="forgotpassword" class="btn">Forgot your password?</button>
    <button type="submit" class="btn" id="registerButton" form="login-form">Register</button>
    <button type="submit" class="btn btn-primary" id="loginButton" form="login-form">Sign in</button>
</div>